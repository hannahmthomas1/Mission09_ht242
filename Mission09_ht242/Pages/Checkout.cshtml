@page
@model Mission09_ht242.Pages.CheckoutModel
@{
}
<br /><br />
<h1 class="">Your Cart</h1>
<br />

@*Checkout table*@
<table class="table table-bordered table-striped shadow-lg">
    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>

@*Entries are dynamically added here*@
    <tbody>
        @foreach (var i in Model.cart.Items)
        {
        <tr>
            <td>@i.Book.Title</td>
            <td>@i.Quantity</td>
            <td>@(i.Book.Price.ToString("c"))</td>
            <td>@((i.Quantity * i.Book.Price).ToString("c"))</td>

            <td class="text-center">
                <form method="post" asp-page-handler="Remove">
                    <input type="hidden" name="bookId" value="@i.Book.BookId" />
                    <input type="hidden" name="returnURL" value="@Model.ReturnUrl" />
                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                </form>
            </td>
        </tr>
        }
    </tbody>

@*Calculates subtotal*@
    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.cart.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>
<br />

@*Url will bring you back to where you just were*@
<div>
    <a class="btn btn-danger" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="btn btn-danger" asp-controller="Purchase" asp-action="CompleteCheckout">Checkout</a>
</div>


